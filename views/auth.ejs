        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: var(--off-white);
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .auth-container {
            background: var(--white);
            width: 450px;
            padding: 40px;
            border-radius: 24px;
            box-shadow: 0 20px 40px rgba(7, 94, 84, 0.1);
            text-align: center;
            border: 1px solid rgba(37, 211, 102, 0.2);
        }

        .logo-area {
            width: 70px;
            height: 70px;
            background: var(--whatsapp-green);
            color: white;
            border-radius: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 2rem;
            margin: 0 auto 20px;
        }

        h1 {
            color: var(--dark-green);
            font-size: 1.75rem;
            font-weight: 800;
            margin-bottom: 10px;
        }

        p {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 30px;
        }

        .input-wrapper {
            margin-bottom: 20px;
            text-align: left;
        }

        .input-wrapper label {
            display: block;
            margin-bottom: 8px;
            color: var(--dark-green);
            font-weight: 600;
            font-size: 0.85rem;
        }

        .input-field {
            position: relative;
        }

        .input-field i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--whatsapp-green);
        }

        .input-field input {
            width: 100%;
            padding: 14px 15px 14px 45px;
            border: 2px solid #e1e8ed;
            border-radius: 12px;
            font-size: 1rem;
            outline: none;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

        .input-field input:focus {
            border-color: var(--whatsapp-green);
            background-color: #fafff8;
            box-shadow: 0 0 0 4px rgba(37, 211, 102, 0.1);
        }

        .btn-green {
            width: 100%;
            background: var(--whatsapp-green);
            color: white;
            border: none;
            padding: 16px;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: background 0.3s;
            margin-top: 10px;
        }

        .btn-green:hover {
            background: #20bd5c;
        }

        .toggle-link {
            margin-top: 25px;
            font-size: 0.9rem;
            color: #666;
        }

        .toggle-link span {
            color: var(--dark-green);
            font-weight: 700;
            cursor: pointer;
            text-decoration: underline;
        }

        /* Hidden states for toggle */
        .hidden {
            display: none;
        }

        #togglePass,
        #togglePass2 {
            left: auto !important;
            right: 15px !important;
        }

        /* Eye icon k liye input me right padding */
        .input-field input {
            padding-right: 45px;
