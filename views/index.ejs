<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OAS | Agent Support Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #075e54;
            --whatsapp-green: #25d366;
            --danger: #ef4444;
            --warning: #f59e0b;
            --info: #3b82f6;
            --bg: #f8fafc;
            --white: #ffffff;
            --text-main: #1e293b;
            --text-muted: #64748b;
            --border: #e2e8f0;
        }

        * { box-sizing: border-box; }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg);
            color: var(--text-main);
            margin: 0;
            display: flex;
            min-height: 100vh;
        }

        /* --- SIDEBAR --- */
        .sidebar {
            width: 280px;
            background: var(--primary);
            color: white;
            position: fixed;
            height: 100vh;
            padding: 30px 20px;
            display: flex;
            flex-direction: column;
            z-index: 100;
            box-shadow: 4px 0 10px rgba(0,0,0,0.05);
        }

        .sidebar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .nav-menu { list-style: none; padding: 0; margin: 0; flex-grow: 1; }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            padding: 14px 18px;
            border-radius: 12px;
            margin-bottom: 8px;
            transition: all 0.2s;
            font-weight: 500;
        }

        .nav-item:hover, .nav-item.active {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .nav-item.active {
            background: var(--whatsapp-green);
            box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
        }

        .logout-btn {
            margin-top: auto;
            color: #fecaca;
            border: 1px solid rgba(254, 202, 202, 0.2);
        }

        /* --- MAIN CONTENT --- */
        .main-content {
            margin-left: 280px;
            flex: 1;
            padding: 40px;
            max-width: 1200px;
        }

        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        .top-header h1 { margin: 0; font-size: 2rem; font-weight: 800; letter-spacing: -0.02em; }

        /* --- NOTIFICATION STRIP --- */
        .notification-strip {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 30px;
            padding: 15px;
            background: #f1f5f9;
            border-radius: 12px;
            align-items: center;
        }

        .notify-pill {
            background: var(--white);
            padding: 6px 14px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--primary);
            border: 1px solid var(--border);
            display: flex;
            align-items: center;
            gap: 8px;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(37, 211, 102, 0); }
            100% { box-shadow: 0 0 0 0 rgba(37, 211, 102, 0); }
        }

        /* --- SECTION CONTROLS --- */
        .section-trigger {
            background: var(--white);
            padding: 20px 25px;
            border-radius: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
            border: 1px solid var(--border);
            margin-bottom: 15px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .section-trigger:hover {
            border-color: var(--whatsapp-green);
            transform: scale(1.01);
        }

        .section-title { display: flex; align-items: center; gap: 15px; font-weight: 700; font-size: 1.1rem; }

        .count-badge {
            background: var(--danger);
            color: white;
            padding: 2px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        /* --- CARDS --- */
        .content-area {
            max-height: 0;
            overflow: hidden;
            transition: all 0.5s ease-in-out;
            opacity: 0;
        }

        .content-area.show { max-height: 5000px; opacity: 1; margin-bottom: 30px; }

        .card {
            background: var(--white);
            border-radius: 20px;
            padding: 28px;
            margin-bottom: 20px;
            border: 1px solid var(--border);
            position: relative;
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
        }

        .group-name { font-size: 1.3rem; font-weight: 800; color: var(--text-main); margin: 0 0 5px 0; }
        
        .msg-text {
            background: #f8fafc;
            padding: 15px;
            border-radius: 12px;
            color: var(--text-main);
            line-height: 1.6;
            margin: 15px 0;
            border-left: 4px solid var(--border);
        }

        .status-pill {
            padding: 6px 14px;
            border-radius: 10px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        /* Buttons */
        .btn {
            padding: 12px 24px;
            border-radius: 12px;
            font-weight: 700;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .btn-primary { background: var(--primary); color: white; }
        .btn-primary:hover { background: var(--whatsapp-green); transform: translateY(-2px); }

        .btn-secondary { background: #f1f5f9; color: var(--text-main); }
        .btn-secondary:hover { background: #e2e8f0; }

        .chevron { transition: transform 0.3s; color: var(--text-muted); }
        .rotate { transform: rotate(180deg); }

        @media (max-width: 900px) {
            .sidebar { width: 80px; padding: 20px 10px; }
            .sidebar-brand span, .nav-item span { display: none; }
            .main-content { margin-left: 80px; }
        }
    </style>
</head>

<body>

    <nav class="sidebar">
        <div class="sidebar-brand">
            <i class="fab fa-whatsapp" style="font-size: 2rem; color: var(--whatsapp-green);"></i> <span>OAS Support</span>
        </div>
        <div class="nav-menu">
            <a href="/dashboard" class="nav-item active">
                <i class="fas fa-th-large"></i> <span>Dashboard</span>
            </a>
            <a href="/configure" class="nav-item">
                <i class="fas fa-sliders-h"></i> <span>Configuration</span>
            </a>
        </div>
        <a href="/logout_bot" class="nav-item logout-btn">
            <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
        </a>
    </nav>

    <main class="main-content">
        <header class="top-header">
            <div>
                <h1>Support Overview</h1>
                <p style="color: var(--text-muted); margin: 5px 0 0;">Real-time monitoring of customer inquiries</p>
            </div>
            <div class="status-pill" style="background: #dcf8c6; color: #075e54; display: flex; align-items: center; gap: 8px;">
                <span style="width: 8px; height: 8px; background: #25d366; border-radius: 50%;"></span>
                System Live
            </div>
        </header>

        <div class="notification-strip">
            <i class="fas fa-paper-plane" style="color: var(--text-muted); margin-right: 10px;"></i>
            <span style="font-size: 0.9rem; font-weight: 600; color: var(--text-muted);">Alerting:</span>
            <% if (current_send.length === 0) { %>
                <span style="font-size: 0.85rem; color: var(--text-muted);">None (Standby)</span>
            <% } else { %>
                <% current_send.forEach(c => { %>
                    <div class="notify-pill">
                        <i class="fas fa-spinner fa-spin" style="font-size: 10px;"></i> <%= c %>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div class="section-trigger" onclick="toggleSection('attentionContent', 'chev1')">
            <div class="section-title">
                <div style="width: 40px; height: 40px; background: #fee2e2; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-bell" style="color: var(--danger);"></i>
                </div>
                Priority Requests
                <span class="count-badge"><%= needsAttention.length %></span>
            </div>
            <i class="fas fa-chevron-down chevron" id="chev1"></i>
        </div>

        <div id="attentionContent" class="content-area show">
            <% if(needsAttention.length === 0) { %>
                <div class="card" style="text-align: center; border: 2px dashed var(--border); background: transparent;">
                    <i class="fas fa-check-circle" style="font-size: 2rem; color: var(--whatsapp-green); margin-bottom: 10px; display: block;"></i>
                    <p style="color: var(--text-muted); font-weight: 500;">Inbox Zero! All customers are currently assisted.</p>
                </div>
            <% } %>

            <% needsAttention.forEach(group => { %>
                <div class="card">
                    <button class="card-close" data-group="<%= group.group_name %>" data-message="<%= group.message_text %>" onclick="send_attention_status(event, this)">
                        <i class="fas fa-check"></i>
                    </button>

                    <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                        <div>
                            <% if (group.is_one) { %>
                                <span class="status-pill status-critical">Critical > 60m</span>
                            <% } else if (group.is_thr) { %>
                                <span class="status-pill status-warning">Warning > 30m</span>
                            <% } else { %>
                                <span class="status-pill status-notice">Notice > 15m</span>
                            <% } %>
                            <h3 class="group-name"><%= group.group_name %></h3>
                            <span class="time-text" style="color: var(--text-muted); font-size: 0.85rem;">
                                <i class="far fa-clock"></i> Received: <%= group.last_message_time %>
                            </span>
                        </div>
                    </div>

                    <div class="msg-text">
                        "<%= group.last_message_text %>"
                    </div>

                    <div class="card-actions">
                        <a href="/chat/<%= encodeURIComponent(group.group_name) %>" class="btn btn-primary">
                            <i class="fas fa-external-link-alt"></i> Open Chat
                        </a>
                        <button class="btn btn-secondary" data-group="<%= group.group_name %>" data-message="<%= group.message_text %>" onclick="send_just_remarks(event, this)">
                            <i class="far fa-sticky-note"></i> Notes
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="section-trigger" onclick="toggleSection('allGroups', 'chev2')">
            <div class="section-title">
                <div style="width: 40px; height: 40px; background: #e0f2fe; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-users" style="color: var(--info);"></i>
                </div>
                Active Channels
                <span class="count-badge" style="background: var(--info);"><%= groups.length %></span>
            </div>
            <i class="fas fa-chevron-down chevron" id="chev2"></i>
        </div>

        <div id="allGroups" class="content-area">
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 15px;">
                <% groups.forEach(g => { %>
                    <div class="card" style="padding: 20px; margin-bottom: 0;">
                        <h4 style="margin: 0 0 10px 0; color: var(--primary);"><%= g.groupName %></h4>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <small style="color: var(--text-muted);">Active: <%= g.timestamp %></small>
                            <a href="/chat/<%= encodeURIComponent(g.groupName) %>" style="color: var(--info); text-decoration: none; font-weight: 700; font-size: 0.8rem;">
                                HISTORY â†’
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleSection(contentId, chevronId) {
            const content = document.getElementById(contentId);
            const chevron = document.getElementById(chevronId);
            content.classList.toggle('show');
            chevron.classList.toggle('rotate');
        }

        async function send_attention_status(e, btn) {
            e.preventDefault();
            const grp = btn.dataset.group;
            const mess = btn.dataset.message;

            const { value: remarks } = await Swal.fire({
                title: "Mark as Handled",
                text: `Closing ticket for ${grp}`,
                input: "text",
                inputPlaceholder: "Optional: Resolution notes...",
                showCancelButton: true,
                confirmButtonColor: "#25d366",
                confirmButtonText: "Resolve"
            });

            if (remarks !== undefined) {
                const res = await fetch('/attention-true', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        group_name: grp,
                        message: mess,
                        remarks: remarks || "Resolved"
                    })
                });
                const data = await res.json();
                if (data.success) location.reload();
            }
        }

        async function send_just_remarks(e, btn) {
            const grp = btn.dataset.group;
            const mess = btn.dataset.message;

            const { value: remarks } = await Swal.fire({
                title: "Add Internal Note",
                input: "text",
                inputPlaceholder: "What's the current status?",
                showCancelButton: true,
                confirmButtonColor: "#075e54"
            });

            if (remarks) {
                const res = await fetch('/add_remarks', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ group_name: grp, message: mess, remarks: remarks })
                });
                const data = await res.json();
                if (data.success) {
                    Swal.fire("Note Saved", "", "success").then(() => location.reload());
                }
            }
        }


        
    </script>
</body>

</html>